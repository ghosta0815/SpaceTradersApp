<Application x:Class="SpaceTradersApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SpaceTradersApp"
             xmlns:ViewModel="clr-namespace:SpaceTradersApp.MVVM.ViewModel"
             xmlns:View="clr-namespace:SpaceTradersApp.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ButtonThemes.xaml"/>
                <ResourceDictionary Source="Themes/TextBoxThemes.xaml"/>
                <ResourceDictionary Source="Styles/Colours.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type ViewModel:ShipViewModel}">
                <View:ShipView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type ViewModel:HomeViewModel}">
                <View:HomeView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
